   }
   notification_email_from Alexandre.Cassen@firewall.loc
   smtp_server 114.212.83.93
   smtp_connect_timeout 30
   router_id LVS_DEVEL
}
          
vrrp_instance VI_1 {
    state LVS_TYPE
    interface eth0 
    virtual_router_id 51
    priority LVS_PRI
    advert_int 1
    authentication {
        auth_type PASS  
        auth_pass 1111 
    }
    virtual_ipaddress {
	LVS_VIP
    }
}
          
virtual_server LVS_VIP 80 { 
    delay_loop 6
    lb_algo rr          
    lb_kind DR         
    nat_mask 255.255.255.0
    persistence_timeout 50  
    protocol TCP       

{{ range $index, $value := $ }}
    {{ $lvs := $value.Env.lvs }}
    {{ if $lvs }}
        {{ with $address := index $value.Addresses 0 }}
	    real_server {{ $address.IP }} 80 {
		weight {{ $value.Env.weight }}
		TCP_CHECK {
		    connect_timeout 3    
		    nb_get_retry 3        
		    delay_before_retry 3 
		}
	    }
        {{ end }}
    {{ end }}
{{ end }}
}
